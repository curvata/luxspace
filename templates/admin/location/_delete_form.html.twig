<form method="post" action="{{ path('location.delete', {'id': location.id}) }}" onsubmit="return confirm('Êtes-vous sûr de bien vouloir supprimer cet élément ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ location.id) }}">
    <button class="btn_delete">Supprimer</button>
</form>

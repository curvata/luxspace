{% extends 'admin/dashboard.html.twig' %}

{% block title %}Administration - Vol de retour {{ returned.reference }}{% endblock %}
{% block description %}
    <meta name="description" content="Visualiser le vol de retour {{ returned.reference }}" />
{% endblock %}

{% block adminContent %}
<h1 class="htitle">Vol de retour ({{ returned.reference }})</h1>
<table class="th-sm">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ returned.id }}</td>
        </tr>
        <tr>
            <th>Référence</th>
            <td>{{ returned.reference }}</td>
        </tr>
        <tr>
            <th>Date de départ</th>
            <td>{{ returned.date ? returned.date|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Nombre de places</th>
            <td>{{ returned.seat }}</td>
        </tr>
        <tr>
            <th>Nom de la fusée</th>
            <td>{{ returned.rocket }}</td>
        </tr>
        <tr>
            <th>Durée de vol</th>
            <td>{{ returned.duration }}</td>
        </tr>
        <tr>
            <th>Prix pour une personne</th>
            <td>{{ returned.price }}</td>
        </tr>
    </tbody>
</table>
<div class="flex_between">
    <a class="btn_back" href="{{ path('returned.index') }}">Retour</a>
    <div class="flex">
        <a class="btn_edit" href="{{ path('returned.edit', {'id': returned.id}) }}">Editer</a>
        {{ include('admin/returned/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
